<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.pce_mason.qi.airpollution.RealTimeAirDataMonitoring.RealTimeDataFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/real_time_air_wifi_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:elevation="@dimen/mCardElevation"
        android:layout_margin="@dimen/activity_all_margin"
        android:padding="@dimen/activity_all_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--CO Progress-->
        <android.support.design.card.MaterialCardView
            style="@style/real_time_map_detail_card_view"
            app:cardElevation="@dimen/mCardElevation"
            app:cardCornerRadius="@dimen/mCardCornerRadius">

            <LinearLayout
                style="@style/real_time_map_detail_linear_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.pce_mason.qi.airpollution.RealTimeAirDataMonitoring.CircularProgressBar
                        android:id="@+id/co_detail_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_all_margin" />

                    <TextView
                        style="@style/real_time_map_detail_progress_text"
                        android:id="@+id/co_detail_txv"/>
                </RelativeLayout>

                <TextView
                    style="@style/real_time_map_detail_label_text"
                    android:text="@string/air_quality_co"/>
            </LinearLayout>

        </android.support.design.card.MaterialCardView>

        <!--O3 Progress-->
        <android.support.design.card.MaterialCardView
            style="@style/real_time_map_detail_card_view"
            app:cardElevation="@dimen/mCardElevation"
            app:cardCornerRadius="@dimen/mCardCornerRadius">

            <LinearLayout
                style="@style/real_time_map_detail_linear_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.pce_mason.qi.airpollution.RealTimeAirDataMonitoring.CircularProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_all_margin"
                        android:id="@+id/o3_detail_progress"/>
                    <TextView
                        style="@style/real_time_map_detail_progress_text"
                        android:id="@+id/o3_detail_txv"/>
                </RelativeLayout>
                <TextView
                    style="@style/real_time_map_detail_label_text"
                    android:text="@string/air_quality_o3"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <!--NO2 Progress-->
        <android.support.design.card.MaterialCardView
            style="@style/real_time_map_detail_card_view"
            app:cardElevation="@dimen/mCardElevation"
            app:cardCornerRadius="@dimen/mCardCornerRadius">
            <LinearLayout
                style="@style/real_time_map_detail_linear_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.pce_mason.qi.airpollution.RealTimeAirDataMonitoring.CircularProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_all_margin"
                        android:id="@+id/no2_detail_progress"/>
                    <TextView
                        style="@style/real_time_map_detail_progress_text"
                        android:id="@+id/no2_detail_txv"/>
                </RelativeLayout>
                <TextView
                    style="@style/real_time_map_detail_label_text"
                    android:text="@string/air_quality_no2"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <!--SO2 Progress-->
        <android.support.design.card.MaterialCardView
            style="@style/real_time_map_detail_card_view"
            app:cardElevation="@dimen/mCardElevation"
            app:cardCornerRadius="@dimen/mCardCornerRadius">
            <LinearLayout
                style="@style/real_time_map_detail_linear_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.pce_mason.qi.airpollution.RealTimeAirDataMonitoring.CircularProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_all_margin"
                        android:id="@+id/so2_detail_progress"/>
                    <TextView
                        style="@style/real_time_map_detail_progress_text"
                        android:id="@+id/so2_detail_txv"/>
                </RelativeLayout>
                <TextView
                    style="@style/real_time_map_detail_label_text"
                    android:text="@string/air_quality_so2"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <!--PM2.5 Progress-->
        <android.support.design.card.MaterialCardView
            style="@style/real_time_map_detail_card_view"
            app:cardElevation="@dimen/mCardElevation"
            app:cardCornerRadius="@dimen/mCardCornerRadius">
            <LinearLayout
                style="@style/real_time_map_detail_linear_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.pce_mason.qi.airpollution.RealTimeAirDataMonitoring.CircularProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_all_margin"
                        android:id="@+id/pm25_detail_progress"/>
                    <TextView
                        style="@style/real_time_map_detail_progress_text"
                        android:id="@+id/pm25_detail_txv"/>
                </RelativeLayout>
                <TextView
                    style="@style/real_time_map_detail_label_text"
                    android:text="@string/air_quality_pm25"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

        <!--Temperature Progress-->
        <android.support.design.card.MaterialCardView
            style="@style/real_time_map_detail_card_view"
            app:cardElevation="@dimen/mCardElevation"
            app:cardCornerRadius="@dimen/mCardCornerRadius">
            <LinearLayout
                style="@style/real_time_map_detail_linear_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.pce_mason.qi.airpollution.RealTimeAirDataMonitoring.CircularProgressBar
                        android:id="@+id/temperature_detail_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_all_margin" />
                    <TextView
                        style="@style/real_time_map_detail_progress_text"
                        android:id="@+id/temperature_detail_txv"/>
                </RelativeLayout>
                <TextView
                    style="@style/real_time_map_detail_label_text"
                    android:text="@string/air_quality_temp"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>

    </LinearLayout>
</LinearLayout>